<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:padding="10dp" >
 
    <ImageView
        android:id="@+id/viewCart_OptionIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingRight="10dp" />
 
    <TextView
        android:id="@+id/viewCart_OptionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/viewCart_OptionIcon"
        android:paddingRight="10dp"
        android:text="Folder name here."
        android:textColor="#000000" />
    
    <ImageView 
        android:id="@+id/viewCart_CarotIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="carot"/>
 
</RelativeLayout>